@{
    ViewData["Title"] = "Contact";
}
@model swap_book.Models.Mail
<body>
<!-- Start Bradcaump area -->
<div class="ht__bradcaump__area bg-image--6">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcaump__inner text-center">
                    <h2 class="bradcaump-title" style="color:#2e2e2e">Contact Us</h2>
                    <nav class="bradcaump-content">
                        <a asp-controller="home" asp-action="index">Home</a>
                            <span class="brd-separetor" style="color:#2e2e2e">/</span>
                        <span class="breadcrumb_item active">Contact Us</span>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Bradcaump area -->
<!-- Start Contact Area -->
<section class="wn_contact_area bg--white pt--80 pb--80">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-12">
                <div class="contact-form-wrap">
                        <h2 localize-content class="contact__title">Get in touch</h2>
                        <p localize-content>Have a book to share or a literary query? Drop me a line! Let's exchange stories and build a world of words together!</p>
                    <form id="contact-form" asp-action="Feedback" asp-controller="Mail" method="post">
                        <div class="single-contact-form space-between">
                            <input type="text" asp-for="FirstName" placeholder="First Name*">
                            <input type="text" asp-for="LastName" placeholder="Last Name*">
                        </div>
                        <div class="single-contact-form space-between">
                            <input type="Email" asp-for="Email" placeholder="Email*">
                        </div>
                        <div class="single-contact-form message">
                            <textarea asp-for="Msg" placeholder="Type your message here.."></textarea>
                        </div>
                        <div class="contact-btn">
                            <button type="submit">Send Email</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-4 col-12 md-mt-40 sm-mt-40">
                <div class="wn__address">
                        <h2 localize-content class="contact__title">Get office info.</h2>
                        <p localize-content>Curious about our office? Feel free to drop us a line for all the details you need. Whether you have a question, a suggestion, or just want to connect, we're here to help. Our space is filled with literary wonders, and we're eager to share that enthusiasm with you. Let's make the world a cozier place, one book exchange at a time </p>
                    <div class="wn__addres__wreapper">

                        <div class="single__address">
                            <i class="icon-location-pin icons"></i>
                            <div class="content">
                                <span>address:</span>
                                    <p>Institutskaya Street 11, Khmelnytskyid</p>
                            </div>
                        </div>

                        <div class="single__address">
                            <i class="icon-phone icons"></i>
                            <div class="content">
                                <span>Phone Number:</span>
                                <p>+38068596171*</p>
                            </div>
                        </div>

                        <div class="single__address">
                            <i class="icon-envelope icons"></i>
                            <div class="content">
                                <span>Email address:</span>
                                <p>swap.book.tech@gmail.com</p>
                            </div>
                        </div>

                        <div class="single__address">
                            <i class="icon-globe icons"></i>
                            <div class="content">
                                <span>website address:</span>
                                <p>swap-book.com</p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Contact Area -->
</body>