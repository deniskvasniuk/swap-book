@{
    ViewData["Title"] = "Exchange";
}


<div class="container my-5">
    <div class="text-center mx-auto">
        <h3>Форма обміну</h3>
        <form method="post" action="/home/performExchange">
            <input type="hidden" value="@ViewBag.BookId" name="BookId" />
            <div class="form-group row">
                <label for="Person" class="col-sm-2 col-form-label">Введіть своє ім'я:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Person" name="Person" placeholder="Ім'я" required regularExpression="^[a-zA-Z ]+$">
                </div>
            </div>
            <div class="form-group row">
                <label for="Address" class="col-sm-2 col-form-label">Введіть адресу:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Address" name="Address" placeholder="Адреса" required regularExpression="^[a-zA-Z0-9, ]+$">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12 text-center" style="margin-top: 10px; margin-bottom: 20px;">
                    <button type="submit" class="btn btn-primary">Відправити</button>
                </div>
            </div>
        </form>
    </div>
</div>
