@model swap_book.Models.Book
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center">Нова книга</h2>

    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Назва книги")
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Author, "Автор")
            @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImageUrl, "Фото")
            @Html.EditorFor(model => model.ImageUrl, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="text-center" style="margin-top: 10px; margin-bottom: 20px;">
            <button type="submit" class="btn btn-primary">Відправити</button>
        </div>
    }
</div>