@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<div class="container" style="margin-top:100px; margin-bottom:30px;">
    <h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    @if (!string.IsNullOrEmpty(Model.Input.ProfilePicture))
    {
        <div class="col-md-4">
            <img src="~/Uploads/@Model.Input.ProfilePicture" style="width:150px; height:150px" alt="Profile picture" />
        </div>
    }
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="Please enter your name." />
                <label asp-for="Input.Name" class="form-label"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <!-- Додайте нові поля для опису, дати народження та Facebook -->
            <div class="form-floating mb-3">
                <textarea asp-for="Input.Description" class="form-control" placeholder="Tell us about yourself"></textarea>
                <label asp-for="Input.Description" class="form-label"></label>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.DateOfBirth" class="form-control" placeholder="Enter your date of birth" type="date" />
                <label asp-for="Input.DateOfBirth" class="form-label"></label>
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Facebook" class="form-control" placeholder="Enter your Facebook profile link" />
                <label asp-for="Input.Facebook" class="form-label"></label>
                <span asp-validation-for="Input.Facebook" class="text-danger"></span>
            </div>
            <!-- Кінець нових полів -->

            <div class="m-2">
                <label for="ProfilePicture" class="form-label">ProfilePicture</label>
                <input asp-for="Input.ImageFile" class="form-control-file" />
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}